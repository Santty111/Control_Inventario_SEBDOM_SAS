@model Control_Inventario_SEBDOM_SAS.Models.Balance

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="NombreProducto"></label>
        <input asp-for="NombreProducto" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Entrada">Entrada</label>
        <input asp-for="Entrada" class="form-control entrada" />
    </div>

    <div class="form-group">
        <label asp-for="Salida">Salida</label>
        <input asp-for="Salida" class="form-control salida" />
    </div>

    <div class="form-group">
        <label asp-for="StockActual">Stock Actual</label>
        <input asp-for="StockActual" class="form-control" readonly />
    </div>

    <button type="submit" class="btn btn-primary">Actualizar</button>
</form>
